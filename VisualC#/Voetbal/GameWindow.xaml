<Window x:Class="Soccer.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GameWindow" Height="479" Width="753" Background="#F5F5F5">
    <Grid>
        <ListBox MouseDoubleClick="PlayersTeam1ListBox_dblClick" Name="playersTeam1ListBox" HorizontalAlignment="Left" Height="144" Margin="85,171,0,0" VerticalAlignment="Top" Width="268"/>
        <ListBox MouseDoubleClick="PlayersTeam2ListBox_dblClick" Name="playersTeam2ListBox" HorizontalAlignment="Left" Height="144" Margin="383,171,0,0" VerticalAlignment="Top" Width="268"/>
        <Label Name="scoreT1Label" Content="Label" HorizontalAlignment="Left" Margin="85,46,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
        <Label Name="scoreT2Label" Content="Label" HorizontalAlignment="Left" Margin="383,46,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
        <Label Name="team1Label" Content="Label" HorizontalAlignment="Left" Margin="85,119,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
        <Label Name="team2Label" Content="Label" HorizontalAlignment="Left" Margin="383,119,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
        <Button Name="stopButton" Content="Stop input" HorizontalAlignment="Left" Margin="330,357,0,0" VerticalAlignment="Top" Width="75" Click="StopButton_Click"/>

    </Grid>
</Window>
