<Window x:Class="Exercise10.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Label x:Name="nameLabel" Content="Naam:" HorizontalAlignment="Left" Margin="10,45,0,0" VerticalAlignment="Top" Width="77"/>
        <Label x:Name="passwordLabel" Content="Paswoord:" HorizontalAlignment="Left" Margin="10,98,0,0" VerticalAlignment="Top" Width="77"/>
        <TextBox x:Name="nameTextBox" HorizontalAlignment="Left" Height="25" Margin="110,46,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250"/>
        <PasswordBox x:Name="passwordPasswordBox" HorizontalAlignment="Left" Height="25"  Margin="110,99,0,0" VerticalAlignment="Top" Width="250"/>
        <Button x:Name="cancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="110,153,0,0" VerticalAlignment="Top" Width="75" Click="CancelButton_Click"/>
        <Button x:Name="okButton" Content="OK" HorizontalAlignment="Left" Margin="285,153,0,0" VerticalAlignment="Top" Width="75"/>
        <ProgressBar x:Name="loginProgressBar" HorizontalAlignment="Left" Height="20" Margin="10,216,0,0" VerticalAlignment="Top" Width="396"/>
    </Grid>
</Window>