<Window x:Class="CheckEmail.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Check email" Height="350" Width="525">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="20,20,0,0"
                   Text="Email:" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="73,19,0,0"
                 Name="mailTextBox" VerticalAlignment="Top" Width="356"/>
        <Button Content="Check" HorizontalAlignment="Left" Margin="354,62,0,0"
                VerticalAlignment="Top" Width="75"
                Name="checkButton" Click="checkButton_Click"/>
    </Grid>
</Window>
