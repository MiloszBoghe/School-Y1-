<Window x:Class="Shapes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Shapes and Square" Height="350" Width="525">
    <Grid>
        <Button Content="Square" HorizontalAlignment="Left"
                Margin="32,36,0,0" VerticalAlignment="Top" Width="75"
                Name="squareButton" Click="squareButton_Click"/>
        <Button Content="Circle" HorizontalAlignment="Left"
                Margin="32,75,0,0" VerticalAlignment="Top" Width="75"
                Name="circleButton" Click="circleButton_Click"/>
        <Canvas HorizontalAlignment="Left" Height="250" Margin="130,36,0,0"
                VerticalAlignment="Top" Width="345"
                Name="paperCanvas" Background="LightGray"/>
    </Grid>
</Window>
