<Window x:Class="BalloonWithProperties.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Balloon with properties" Height="288" Width="389.612">
    <Grid>
        <Button Content="Move" HorizontalAlignment="Left" Margin="30,60,0,0"
                VerticalAlignment="Top" Width="75"
                Name="moveButton" Click="moveButton_Click"/>
        <Button Content="Grow" HorizontalAlignment="Left" Margin="30,101,0,0"
                VerticalAlignment="Top" Width="75"
                Name="growButton" Click="growButton_Click"/>
        <Button Content="Display x" HorizontalAlignment="Left" Margin="30,25,0,0"
        	VerticalAlignment="Top" Width="75"
        	x:Name="displayXButton" Click="displayXButton_Click"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="124,25,0,0"
                 Name="xCoordTextBox" VerticalAlignment="Top" Width="60"/>
        <Button Content="Change x" HorizontalAlignment="Left" Margin="282,25,0,0"
        	VerticalAlignment="Top" Width="75"
        	x:Name="changeXButton" Click="changeXButton_Click"/>
        <Canvas HorizontalAlignment="Left" Height="173" Margin="124,60,0,0"
                VerticalAlignment="Top" Width="233" Background="LightGray"
                Name="drawingCanvas"/>
    </Grid>
</Window>