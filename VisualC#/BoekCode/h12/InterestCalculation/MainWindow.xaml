<Window x:Class="InterestCalculation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Interest Calculation" Height="350" Width="307.687">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="20,20,0,0"
                   Text="Enter initial amount:" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="20,60,0,0"
                   Text="Enter interest rate:" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="153,20,0,0"
                 Text="100"
                 Name="initialAmountTextBox" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="153,60,0,0"
                 Text="10"
                 Name="rateTextBox" VerticalAlignment="Top" Width="120"/>
        <Button Content="Another year" HorizontalAlignment="Left"
                Margin="153,109,0,0" VerticalAlignment="Top" Width="120"
                Name="yearButton" Click="yearButton_Click"/>
        <TextBox HorizontalAlignment="Left" Height="146"
                 Margin="20,151,0,0" TextWrapping="Wrap"
                 VerticalAlignment="Top" Width="253"
                 VerticalScrollBarVisibility="Visible"
                 Name="resultTextBox" />

    </Grid>
</Window>
