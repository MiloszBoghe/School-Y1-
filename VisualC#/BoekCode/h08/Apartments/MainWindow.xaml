<Window x:Class="Apartments.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Apartments" Height="365" Width="363">
    <Grid>
        <Slider HorizontalAlignment="Left"
                Margin="70,24,0,0" VerticalAlignment="Top" Width="250"
                Minimum="0" Maximum="10"
                TickPlacement="BottomRight" IsSnapToTickEnabled="True"
                Name="horizSlider"/>
        <Slider HorizontalAlignment="Left"
                Margin="25,65,0,0" VerticalAlignment="Top" Height="250"
                Minimum="0" Maximum="10"
                TickPlacement="BottomRight" IsSnapToTickEnabled="True"
                Name="vertSlider" Orientation="Vertical" />
        <Canvas HorizontalAlignment="Left" Height="250"
                Margin="70,65,0,0" VerticalAlignment="Top" Width="250"
                Name="apartmentsCanvas" Background="LightGray"/>

    </Grid>
</Window>
