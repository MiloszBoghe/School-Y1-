<Window x:Class="Searching.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Searching" Height="243" Width="440">
    <Grid>
        <ListBox HorizontalAlignment="Left" Height="138"
                 Margin="20,20,0,0" VerticalAlignment="Top"
                 Width="100" Name="shoppingListBox">
            <ListBoxItem>tea</ListBoxItem>
            <ListBoxItem>sugar</ListBoxItem>
            <ListBoxItem>coffee</ListBoxItem>
            <ListBoxItem>milk</ListBoxItem>
            <ListBoxItem>bread</ListBoxItem>
            <ListBoxItem>tomatoes</ListBoxItem>
        </ListBox>
        <Button Content="Find" HorizontalAlignment="Left" Margin="20,175,0,0"
                VerticalAlignment="Top" Width="100"
                Name="findButton" Click="findButton_Click"/>
        <TextBox HorizontalAlignment="Left" Height="23"
                 Margin="149,175,0,0" VerticalAlignment="Top" Width="100"
                 Name="findTextBox"/>
        <Label Name="resultLabel" Content="" HorizontalAlignment="Left"
               Margin="140,66,0,0" VerticalAlignment="Top"
               FontSize="28"/>
    </Grid>
</Window>
