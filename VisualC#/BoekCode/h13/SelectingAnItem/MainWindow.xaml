<Window x:Class="SelectingAnItem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Selecting an item" Height="175" Width="330">
    <Grid>
        <ListBox HorizontalAlignment="Left" Height="100"
                 Margin="25,25,0,0" VerticalAlignment="Top" Width="100"
                 Name="shoppingListBox"
                 SelectionChanged="shoppingListBox_SelectionChanged">
            <ListBoxItem>bread</ListBoxItem>
            <ListBoxItem>milk</ListBoxItem>
            <ListBoxItem>coffee</ListBoxItem>
            <ListBoxItem>tea</ListBoxItem>
        </ListBox>
        
        <TextBox HorizontalAlignment="Left" Height="23" Margin="248,51,0,0"
                 VerticalAlignment="Top" Width="50"
                 Name="numberTextBox"/>
        <TextBlock HorizontalAlignment="Left" Margin="149,51,0,0"
                   TextWrapping="Wrap" Text="You have selected item number"
                   VerticalAlignment="Top" Width="70"/>
    </Grid>
</Window>