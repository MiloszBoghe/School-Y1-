<Window x:Class="AddAnItem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add an item" Height="175" Width="410">
    <Grid>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="25,25,0,0"
                 VerticalAlignment="Top" Width="120"
                 Name="itemTextBox"/>
        <Button Content="Add >" HorizontalAlignment="Left"
                Margin="174,25,0,0" VerticalAlignment="Top"
                Width="75" Name="addButton" Click="addButton_Click"/>
        <ListBox HorizontalAlignment="Left" Height="100"
                 Margin="280,23,0,0" VerticalAlignment="Top" Width="100"
                 Name="shoppingListBox">
            <ListBoxItem>bread</ListBoxItem>
            <ListBoxItem>milk</ListBoxItem>
            <ListBoxItem>coffee</ListBoxItem>
        </ListBox>
    </Grid>
</Window>
