<Window x:Class="FindBalloons.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FindBalloons"
        mc:Ignorable="d"
        Title="Find Balloons" Height="300" Width="357.015">
    <Grid>
        <Canvas HorizontalAlignment="Left" Height="188" Margin="20,20,0,0"
                VerticalAlignment="Top" Width="300"
                Name="balloonCanvas" Background="LightGray"
                ClipToBounds="True"/>
        <Button Content="Draw" HorizontalAlignment="Left"
                Margin="20,230,0,0" VerticalAlignment="Top" Width="75"
                Name="drawButton" Click="drawButton_Click"/>
        <Button Content="Find" HorizontalAlignment="Left"
                Margin="245,230,0,0" VerticalAlignment="Top" Width="75"
                Name="findButton" Click="findButton_Click"/>
    </Grid>
</Window>

