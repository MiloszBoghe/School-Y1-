<Window x:Class="AskFrasier.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ask Frasier" Height="262.836" Width="437.836">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="40,40,0,0"
                   Text="How are you feeling today?" VerticalAlignment="Top"
                   FontSize="14pt"/>
        <Button Content="Ask" HorizontalAlignment="Left" Margin="321,46,0,0"
                VerticalAlignment="Top" Width="75"
                Name="askButton" Click="askButton_Click"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="40,96,0,0"
                 VerticalAlignment="Top" Width="356" Name="questionTextBox"/>
        <TextBlock HorizontalAlignment="Left" Margin="40,145,0,0"
        	Text="Frasier says:" VerticalAlignment="Top"
        	FontSize="14pt"/>
        <Label Content="Label" HorizontalAlignment="Left"
               Margin="110,180,0,0" VerticalAlignment="Top"
               Name="replyLabel" FontSize="14pt" FontStyle="Italic"/>
    </Grid>
</Window>
