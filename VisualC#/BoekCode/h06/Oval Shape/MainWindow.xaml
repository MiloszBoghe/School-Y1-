<Window x:Class="Oval_Shape.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Oval Shape" Height="360" Width="414.6">
    <Grid>
        
        <Canvas HorizontalAlignment="Left"
                Height="250" Width="250" Margin="125,20,0,0" VerticalAlignment="Top"
                Background="LightGray" Name="paperCanvas"/>
        <Label Content="horizLabel" HorizontalAlignment="Left"
               Margin="223,298,0,0" VerticalAlignment="Top"
               Name="horizontalLabel"/>
        <Label Content="vertLabel" HorizontalAlignment="Left"
               Margin="25,125,0,0" VerticalAlignment="Top"
               Name="verticalLabel"/>
        <Slider HorizontalAlignment="Left" Margin="125,275,0,0" VerticalAlignment="Top"
                Width="250" Name="horizontalSlider"
                ValueChanged="horizontalSlider_ValueChanged" Value="100"/>

        <Slider HorizontalAlignment="Left" Margin="88,20,0,0" VerticalAlignment="Top"
                Height="250" Name="verticalSlider" Orientation="Vertical"
                ValueChanged="verticalSlider_ValueChanged" Value="100"/>
    </Grid>
</Window>
