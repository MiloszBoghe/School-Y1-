        <TextBox HorizontalAlignment="Left" Margin="82,117,0,0"
                   Text="McBurgers" VerticalAlignment="Top"
                   FontFamily="Gabriola" FontSize="50" FontWeight="Bold"
                   Name="foodTextBox" IsEnabled="False" />
