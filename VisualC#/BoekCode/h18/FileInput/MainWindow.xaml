<Window x:Class="FileInput.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="File Input" Height="305" Width="380">
    <Grid>
        <TextBox HorizontalAlignment="Left" Height="190" Margin="20,20,0,0"
                 VerticalAlignment="Top" Width="325"
                 VerticalScrollBarVisibility="Visible"
                 Name="fileTextBox"/>
        <Button Content="Read File" HorizontalAlignment="Left"
                Margin="270,233,0,0" VerticalAlignment="Top" Width="75"
                Name="readButton" Click="readButton_Click"/>
    </Grid>
</Window>
