<Window x:Class="FileOutput.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="File Output" Height="200" Width="300">
    <Grid>
        <Button Content="Write" HorizontalAlignment="Left" Margin="40,40,0,0"
                VerticalAlignment="Top" Width="140"
                Name="writeButton" Click="writeButton_Click"/>
        <Button Content="Write to My Documents" HorizontalAlignment="Left" Margin="40,70,0,0"
                VerticalAlignment="Top" Width="140"
                Name="myDocButton" Click="myDocButton_Click"/>
        <Button Content="Write to AppData" HorizontalAlignment="Left" Margin="40,100,0,0"
                VerticalAlignment="Top" Width="140"
                Name="writeAppButton" Click="writeAppButton_Click"/>
        <Label Content="" HorizontalAlignment="Left" Margin="40,124,0,0"
               VerticalAlignment="Top" Name="statusLabel"/>
    </Grid>
</Window>
