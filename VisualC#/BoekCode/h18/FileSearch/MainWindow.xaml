<Window x:Class="FileSearch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="File Search" Height="265" Width="350">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="35,43,0,0"
                   Text="File to search:" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="121,42,0,0"
                 Name="fileTextBox" VerticalAlignment="Top" Width="200"/>
        <TextBlock HorizontalAlignment="Left" Margin="35,74,0,0"
        	Text="Person's Name:" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="121,73,0,0"
        	Name="nameTextBox" VerticalAlignment="Top" Width="200"/>
        <Button Content="Search" HorizontalAlignment="Left" Margin="121,120,0,0"
                VerticalAlignment="Top" Width="75"
                Name="searchButton" Click="searchButton_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="35,167,0,0"
        	Text="Result 1:" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="35,198,0,0"
        	Text="Result 2:" VerticalAlignment="Top"/>
        <Label Name="result1Label" HorizontalAlignment="Left" Margin="121,162,0,0" VerticalAlignment="Top"/>
        <Label Name="result2Label" HorizontalAlignment="Left" Margin="121,193,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
