<Window x:Class="DirectoryDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Directory Demo" Height="350" Width="535">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="20,20,0,0"
                   Text="Folder:" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="68,19,0,0"
                 Name="folderTextBox" VerticalAlignment="Top" Width="354"/>
        <Button Content="Show" HorizontalAlignment="Left" Margin="433,21,0,0"
                VerticalAlignment="Top" Width="75"
                Name="showButton" Click="showButton_Click"/>
        <TextBox HorizontalAlignment="Left" Height="210" Margin="20,82,0,0"
                 TextWrapping="Wrap" VerticalAlignment="Top" Width="240"
                 Name="foldersTextBox" VerticalScrollBarVisibility="Auto"/>
        <TextBox HorizontalAlignment="Left" Height="210" Margin="269,82,0,0"
                 TextWrapping="Wrap" VerticalAlignment="Top" Width="240"
                 Name="filesTextBox" VerticalScrollBarVisibility="Auto"/>
        <TextBlock HorizontalAlignment="Left" Margin="21,62,0,0"
                   Text="Folders" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="268,62,0,0"
        	Text="Files" VerticalAlignment="Top"/>




    </Grid>
</Window>
