<Window x:Class="EurosAndCents.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Euros and cents" Height="180" Width="420">
    <Grid>
        <TextBox HorizontalAlignment="Left" Height="23"
                 Margin="20,32,0,0" VerticalAlignment="Top"
                 Width="120" Name="amountTextBox"/>
        <TextBlock HorizontalAlignment="Left" Margin="20,72,0,0"
                   Text="Input cents" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="160,32,0,0"
                   Text="is" VerticalAlignment="Top"/>

        <TextBlock HorizontalAlignment="Left" Margin="230,72,0,0"
                   Text="Euros" VerticalAlignment="Top" />
        <TextBlock HorizontalAlignment="Left" Margin="230,32,0,0"
                   Name="eurosTextBlock" VerticalAlignment="Top" />

        <TextBlock HorizontalAlignment="Left" Margin="360,72,0,0"
                   Text="Cents" VerticalAlignment="Top" />
        <TextBlock HorizontalAlignment="Left" Margin="360,32,0,0"
                   Name="centsTextBlock" VerticalAlignment="Top" />
        <Button Content="Calculate" HorizontalAlignment="Left"
                Margin="20,112,0,0" VerticalAlignment="Top"
                Width="120" Name="calculateButton"
                Click="calculateButton_Click"/>
    </Grid>
</Window>
